                <TextField fx:id="hostInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="34.0" text="Port" GridPane.rowIndex="0" />
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="35.0" text="Host" GridPane.rowIndex="1" />
                <Label text=" Username" GridPane.rowIndex="2" />
                <Label prefHeight="17.0" prefWidth="34.0" text="  Text" GridPane.rowIndex="3"/>
                <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="input" prefHeight="25.0" prefWidth="477.0" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS" />
            </children>
        </GridPane>
    </bottom>
